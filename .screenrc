attrcolor b ".I"
autodetach on
defbce "on"
defencoding UTF-8
defscrollback 10000
escape ^Tt
hardcopy_append on
hardstatus alwayslastline "[%02c] %-w%{=b ck}%n %t%{-}%+w"
# layout autosave on
multiuser on
shell -$SHELL
startup_message off
term xterm-256color
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

vbell off
bind V vbell

bind ^G
bind g

bind S exec /bin/sh -c '[ -n "$SCREEN_HARDCOPY_TO" ] && screen -X hardcopy -h hardcopy && cat hardcopy | tail -n 10000 | sed -e "1iSubject: screen hardcopy\n" | /usr/sbin/sendmail $SCREEN_HARDCOPY_TO && screen -X echo "sent hardcopy to $SCREEN_HARDCOPY_TO"'

# window: C-t w <KEY> bindings
bind w command -c WINDOWCLASS
bind -c WINDOWCLASS s split
bind -c WINDOWCLASS v split -v  # split vertically
bind -c WINDOWCLASS o only
bind -c WINDOWCLASS c remove
bind -c WINDOWCLASS w focus
bind -c WINDOWCLASS W focus up
bind -c WINDOWCLASS \^ resize
bind -c WINDOWCLASS > resize +5
bind -c WINDOWCLASS < resize -5
bind -c WINDOWCLASS = resize =

