set ambiwidth=double
set autoindent
set autoread
set backspace=2
set clipboard=unnamedplus
set completeopt=menuone
set cursorline
set display=lastline
set expandtab
set hidden
set ignorecase
set incsearch
set list
set listchars=tab:>\ ,trail:~,extends:>,precedes:<,nbsp:%
set matchtime=1
set nocompatible
set noswapfile
set number
set pumheight=10
set scrolloff=999 " always keep the cursor centered. fzf_layoutのwindowと相性が 悪いので注意.
set shiftwidth=4
set showmatch
set smartcase
set softtabstop=4
set splitbelow
set splitright
set tabstop=4
set updatetime=300
set wildmenu
set wildmode=longest:full,full

let mapleader="\<Space>"

map ; :

nnoremap Y y$

nmap \E :vsplit<CR>:e %:p:h<CR>
nmap \e :e %:p:h<CR>
nmap \n :set number!<CR>
