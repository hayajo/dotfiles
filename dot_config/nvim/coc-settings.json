{
    "coc.preferences.formatOnSave": true,
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": [
                "serve"
            ],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {},
            "settings": {}
        },
        "rust-analyzer": {
            "check": {
                "command": "clippy"
            }
        },
        "jsonnet": {
            "command": "jsonnet-language-server",
            "args": [
                "-t"
            ],
            "rootPatterns": [
                ".git/",
                "jsonnetfile.json"
            ],
            "filetypes": [
                "jsonnet",
                "libsonnet"
            ]
        }
    }
}
